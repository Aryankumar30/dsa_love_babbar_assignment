#include <iostream>

using namespace std;

int main()
{
   int n = 5 ;
   int row = 1 ; 
   int col = 1 ;
   int i = 0 ;
   int no= 1;
   for( row = 1 ;  row <= n ; row++){
       
       for(col = 1 ; col <=  n - row  ; col++){
           cout<<"  ";
       }
      
    
     int p = 0 ;
     int count = 0 ;
       for(col = 1 ; col <= row + i ; col++){
          
          if(count < row){
                 cout<<no<<" ";  
                 count ++;
                 
                p = no ;
          no++;
          }
          
          else{
              
              p--;
                cout<<p<<" ";  
              
              
          }
        
             
      
         
       }  i++;
       cout<<endl;
    no = row + 1;
   }

    return 0;
}




