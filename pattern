#include <iostream>

using namespace std;


int main()
{
   
   int row = 0;
   int col = 0 ;
   int n = 6;
   
   while(row<n){ 
            row++;
            int p = row;
       if(row == n || row == 1){
           while(p <= n ){
           cout<<"*"<<" ";
          
           p++;
       }}
       
      else{
       cout<<"*"<<" ";
      }
      
      
       while ( col < n - row - 1 ){
               cout<<" "<<" ";
               col++;
             
           }
           col = 0 ;
        
        if(row != n && row != 1){
           cout<<"*";
       }   
   
 
      
          cout<<endl;
          col = 0;
   }

    return 0;
    
}

