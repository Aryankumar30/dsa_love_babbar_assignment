#include <iostream>

using namespace std;


int main()
{
   
   int row = 0;
   int col = 0 ;
   int n = 4;
   
   while(row<n){
       
          while ( col < n -row -1){
               cout<<" "<<" ";
               col++;
       }
           col = 0 ;
           
       while(col<= row){
       cout<<"*"<<" ";
      col++;
   }
 
        row++;
          cout<<endl;
          col = 0;
   }

    return 0;
    
}

