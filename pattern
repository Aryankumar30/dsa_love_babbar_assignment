#include <iostream>

using namespace std;

/*
****
****
****
****
*/
int main()
{
   
   int n = 4;
   int m = 4 ;
   
   
   while(n>0){
       while(m>0){
       
       cout<<"*";
       m--;
   }
 
        n--;
          cout<<endl;
          m = 4;
   }

    return 0;
}

