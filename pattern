#include <iostream>

using namespace std;

int main()
{
   
   int row = 0;
   int col = 0 ;
   int n = 9;
   int no = 1;
   int p = 0 ;
   int realrow = 1 ;
   while(row<n){
       
     while(col<=row){
           
         
           if(no <= realrow){     
                cout<<no<<" ";
                  no++;
       p = no -1 ;
     
           }
           
           else{
               
               p--;
               
               cout<<p<<" " ;
           }
       
    
       col++;
      
   
     }
     
no = 1;
        row++;
        row++;
        realrow++;
          cout<<endl;
          col = 0;
   }

    return 0;
    
}



