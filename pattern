      #include <iostream>

using namespace std;

int main()
{
    int n = 5 ;
    int row = 0 ;
    int col = 0 ;
    
    for(row = 1 ; row <= n ; row++){
        
        
        if(row == 1 ){
            for(int i = 1 ; i <=n ; i++){
                cout<<"* ";
            }
             row++;
        cout<<endl;
        }
        
       
        for(col = 1 ; col<row  ; col++){
            cout<<" ";
        }
        cout<<"*";
        
        for(col = 1 ; col< n - row  ; col++){
            cout<<"  ";
        }
        
        if(row == n){
            break;
        }
         cout<<" *";
        
        cout<<endl;
    }
   

    return 0;
}

