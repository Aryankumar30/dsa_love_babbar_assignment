#include <iostream>

using namespace std;

int main()
{
   int n = 5 ;
   int row = 1 ; 
   int col = 1 ;
   int i = 0 ;
   int no= 0;
   for( row = 1 ;  row <= n ; row++){
       
       for(col = 1 ; col <=  n - row  ; col++){
           cout<<"  ";
       }
      
      
      int q ;
       for(col = 1 ; col <= row + i ; col++){
          
           if(no < row){
                no++;
                cout<<no<<" ";  
           q =no;
           }
         
          else{
             
            q--;
               cout<<q<<" ";
        
          }
         
       }  i++;
       cout<<endl;
      no = 0;
   }

    return 0;
}


