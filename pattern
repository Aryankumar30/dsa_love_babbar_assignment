#include <iostream>

using namespace std;

int main()
{
  int n = 9 ;
  int row = 1 , col = 1 ;
  char value = 65;
  char p ;
  int realrow = 1;
  
  for( row = 1 ; row <= n ; row = row + 2 ){
      
      for(col = 1 ; col <= row ; col++){
          
          if( (int)value - 64 <= realrow ){
                cout<<value<<" ";
                p = value;
               value++;;
          }
          
         else{
             
             p--;
             cout<<p<<" ";
             
         }
      }
      
      value = 65;
      cout<<endl;
      realrow++;
  }

    return 0;
}



