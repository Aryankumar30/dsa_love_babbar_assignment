#include <iostream>

using namespace std;


int main()
{
   
   int row = 0;
   int col = 0 ;
   int n = 6;
   cout<<"      "<<"*"<<endl;
   while(row<n -1){ 
       
       row++;
       
       
       while ( col < n -1 -row ){
               cout<<" "<<"";
               col++;
             
           }
           col = 0 ;
           
           
           cout<<" "<<"*"<<"";
       while(col< row -1){
           
           
       cout<<" "<<""<<" ";
      col++;
      
      
   }
 cout<<" "<<"*"<<"";
      
          cout<<endl;
          col = 0;
   }



 n = 6 ;
   
    for(row = 1 ; row <= n ; row++){
        
        
       
       
        for(col = 1 ; col<row  ; col++){
            cout<<" ";
        }
        cout<<" *";
        
        for(col = 1 ; col< n - row  ; col++){
            cout<<"  ";
        }
        
        if(row == n){
            break;
        }
         cout<<" *";
        
        cout<<endl;
    }
   


    return 0;
    
}

