#include <iostream>

using namespace std;


void func1(int** q) {
    q = q+1;
}

void func2(int** q) {
    *q = *q+1;
}

void func3(int** q) {
    **q = **q+1;
}

int main()
{
    int a = 5;
    
    int *p = &a;
    
    int **q = &p; // double pointer 
    
    int ***r = &q; // triple pointer 
    
    cout<<a<<endl;
     cout<<&a<<endl;
     // cout<<*a<<endl; yaha error aaye ga 
     
      cout<<&p<<endl;
      cout<<p<<endl;
      cout<<*p<<endl;
    
    cout<<&q<<endl;
    cout<<q<<endl;
    cout<<*q<<endl;
    cout<<**q<<endl;


cout << "before " << p  << endl;
cout << "after " << q << endl;
    cout << "after " << *q << endl;
     cout << "after " << **q << endl;
     
    func3(q);
func1(q);
func2(q);
    

    cout << "before " << q << endl;
     cout << "before " << *q << endl;
    cout << "before " << **q << endl;


    return 0;
}
