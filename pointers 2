{
    int a = 5;
    
    int *p = &a;
    
    int **q = &p; // double pointer 
    
    int ***r = &q; // triple pointer 
    
    cout<<a<<endl;
     cout<<&a<<endl;
     // cout<<*a<<endl; yaha error aaye ga 
     
      cout<<&p<<endl;
      cout<<p<<endl;
      cout<<*p<<endl;
    
    cout<<&q<<endl;
